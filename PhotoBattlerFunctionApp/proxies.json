{
  "$schema": "http://json.schemastore.org/proxies",
  "proxies": {
    "staticIndex": {
      "matchCondition": {
        "methods": [ "GET" ],
        "route": "/site/"
      },
      "backendUri": "%STATIC_SITE_PATH%/index.html"
    },
    "staticSite": {
      "matchCondition": {
        "methods": [ "GET" ],
        "route": "/site/{*restOfPath}"
      },
      "backendUri": "%STATIC_SITE_PATH%/{restOfPath}"
    }
  }
}